@using intelometry_app.Models
@using intelometry_app.Wrappers

<table class="table text-center mb-0">
    <thead>
        <tr>
            @foreach (var column in Response!.Columns)
            {
                <th>@column</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Response!.Data)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.PriceHub</td>
                <td>@data.TradeDate.ToShortDateString()</td>
                <td>@data.DeliveryStartDate.ToShortDateString()</td>
                <td>@data.DeliveryEndDate.ToShortDateString()</td>
                <td>@data.HighPrice</td>
                <td>@data.LowPrice</td>
                <td>@data.AvgPrice</td>
                <td>@data.Change</td>
                <td>@data.Volume</td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter]
    public PagedResponse<List<MarketDataModel>>? Response { get; set; }
}
